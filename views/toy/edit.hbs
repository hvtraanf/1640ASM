<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <form action="/toy/edit/{{toy._id}}" method="post" class="mt-5">
        <h1 class="text-center mb-5">Edit Toy</h1>
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" name="name" value="{{ toy.name }}">
        </div>
        <div class="form-group">
          <label for="price">Price</label>
          <input type="number" class="form-control" id="price" name="price" value="{{ toy.price }}">
        </div>
        <div class="form-group">
          <label for="quantity">Quantity</label>
          <input type="number" class="form-control" id="quantity" name="quantity" value="{{ toy.quantity }}">
        </div>
        <div class="form-group">
          <label for="brand">Brand</label>
          <select class="form-control" id="brand" name="brand">
            {{#each brand }}
              <option value="{{ _id }}">{{ name }}</option>
            {{/each}}
          </select>
        </div>
        <button type="submit" class="btn btn-primary">Edit</button>
      </form>
    </div>
  </div>
</div>